<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="auto_service_vehicle_manufacturer_tree" model="ir.ui.view">
        <field name="name">auto_service.vehicle_manufacturer.tree</field>
        <field name="model">auto_service.vehicle_manufacturer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="auto_service_vehicle_manufacturer_form" model="ir.ui.view">
        <field name="name">auto_service.vehicle_manufacturer.form</field>
        <field name="model">auto_service.vehicle_manufacturer</field>
        <field name="arch" type="xml">
            <form>
                <field name="active"/>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="auto_service_vehicle_manufacturer_act_window" model="ir.actions.act_window">
        <field name="name">Vehicle manufacturers</field>
        <field name="res_model">auto_service.vehicle_manufacturer</field>
        <field name="view_mode">tree,form</field>
    </record>

  </odoo>
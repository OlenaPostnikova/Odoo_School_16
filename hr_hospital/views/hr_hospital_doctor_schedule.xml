<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="hr_hospital_doctor_schedule_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.schedule.tree</field>
        <field name="model">hr_hospital.doctor.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="begin_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_schedule_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.schedule.form</field>
        <field name="model">hr_hospital.doctor.schedule</field>
        <field name="arch" type="xml">
            <form>
                <field name="active"/>
                <field name="doctor_id"/>
                <group>
                    <field name="date"/>
                    <field name="begin_time"/>
                    <field name="end_time"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_schedule_act_window" model="ir.actions.act_window">
        <field name="name">Doctor schedule</field>
        <field name="res_model">hr_hospital.doctor.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Doctor schedule"
              id="hr_hospital.doctor_schedule"
              parent="hr_hospital.menu_root"
              action="hr_hospital_doctor_schedule_act_window"/>

  </odoo>
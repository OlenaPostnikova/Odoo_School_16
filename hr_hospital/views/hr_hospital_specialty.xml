<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="hr_hospital_specialty_tree" model="ir.ui.view">
        <field name="name">hr_hospital.specialty.tree</field>
        <field name="model">hr_hospital.specialty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

     <record id="hr_hospital_specialty_form" model="ir.ui.view">
        <field name="name">hr_hospital.specialty.form</field>
        <field name="model">hr_hospital.specialty</field>
        <field name="arch" type="xml">
            <form>
                <field name="active"/>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="hr_hospital_specialty_act_window" model="ir.actions.act_window">
        <field name="name">Specialty</field>
        <field name="res_model">hr_hospital.specialty</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Specialty"
              id="hr_hospital.specialty"
              parent="hr_hospital.menu_root"
              action="hr_hospital_specialty_act_window"/>

  </odoo>
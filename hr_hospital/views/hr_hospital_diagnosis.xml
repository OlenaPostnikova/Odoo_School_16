<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="hr_hospital_diagnosis_tree" model="ir.ui.view">
        <field name="name">hr_hospital.diagnosis.tree</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
                <field name="diagnosis_date"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_form" model="ir.ui.view">
        <field name="name">hr_hospital.diagnosis.form</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <group string="Patient, date">
                    <field name="active"/>
                    <field name="name"/>
                    <field name="diagnosis_date"/>
                    <field name="patient_id"/>
                </group>
                 <group string="Current diagnosis">
                     <field name="doctor_id"/>
                     <field name="disease_id"/>
                 </group>
                <group string = "Prescription, treatment">
                    <field name="recommendation"/>
                    <field name="comment"/>
                    <field name="state"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_pivot" model="ir.ui.view">
        <field name="name">hr_hospital.diagnosis.pivot</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="disease_id" type="row"/>
                <field name="diagnosis_date" interval="year" type="col"/>
                <field name="diagnosis_date" interval="month" type="col"/>
                <field name="qty" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_graph" model="ir.ui.view">
        <field name="name">hr_hospital.diagnosis.graph</field>
        <field name="model">hr_hospital.diagnosis</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="diagnosis_date" interval="month"/>
                <field name="disease_id"/>
                <field name="qty" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_act_window" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">hr_hospital.diagnosis</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <menuitem name="Diagnosis"
              id="hr_hospital.diagnosis"
              parent="hr_hospital.menu_root"
              action="hr_hospital_diagnosis_act_window"/>

  </odoo>
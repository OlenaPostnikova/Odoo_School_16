<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="hr_hospital_disease_tree" model="ir.ui.view">
        <field name="name">hr_hospital.disease.tree</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
                <field name="disease_group_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_disease_form" model="ir.ui.view">
        <field name="name">hr_hospital.disease.form</field>
        <field name="model">hr_hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <field name="active"/>
                <field name="name"/>
                <group>
                    <field name="disease_group_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_act_window" model="ir.actions.act_window">
        <field name="name">Disease</field>
        <field name="res_model">hr_hospital.disease</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Diseases"
              id="hr_hospital.disease"
              parent="hr_hospital.menu_root"
              action="hr_hospital_disease_act_window"/>

  </odoo>